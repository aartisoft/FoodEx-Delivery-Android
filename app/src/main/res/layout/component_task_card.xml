<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginRight="@dimen/dp8"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp8"
        android:layout_gravity="center"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="@dimen/dp10"
        app:cardElevation="@dimen/dp1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp14">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Господаренко Юлия Владимировна"
                android:paddingBottom="@dimen/dp8"
                android:textSize="@dimen/sp14"
                android:fontFamily="@font/maven_pro_medium"
                android:textColor="#939CBC" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp8">
                <ImageView
                    android:layout_width="@dimen/sp14"
                    android:layout_height="@dimen/sp14"
                    android:src="@drawable/phone"
                    android:layout_marginRight="@dimen/dp10"/>
                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="+380 95 948 35 23"
                    android:textSize="@dimen/sp14"
                    android:fontFamily="@font/maven_pro_medium"
                    android:textColor="#939CBC" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp8">
                    <RelativeLayout
                        android:id="@+id/layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7:56, 10 Jun"
                            android:layout_alignParentLeft="true"
                            android:textSize="@dimen/sp14"
                            android:fontFamily="@font/maven_pro_medium"
                            android:textColor="#939CBC" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp10"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_toLeftOf="@+id/end_time"
                            android:layout_toRightOf="@+id/start_time">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="@dimen/dp4"
                                    android:layout_height="@dimen/dp4"
                                    android:src="@drawable/circle_active"/>
                                <LinearLayout
                                    android:id="@+id/date_filler"
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="@dimen/dp2"
                                    android:layout_marginRight="@dimen/dp6"
                                    android:layout_height="1dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/colorInnactive"
                                    android:orientation="horizontal">
                                </LinearLayout>

                            </LinearLayout>
                            <ImageView
                                android:id="@+id/date_filler_dot"
                                android:layout_alignParentRight="true"
                                android:layout_width="@dimen/dp4"
                                android:layout_height="@dimen/dp4"
                                android:src="@drawable/circle"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8:03, 10 Jun"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/sp14"
                            android:fontFamily="@font/maven_pro_medium"
                            android:textColor="#939CBC" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp8">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10">
                        <TextView
                            android:id="@+id/start_address"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:text="St. Levoberezhna 7/9"
                            android:textSize="@dimen/sp14"
                            android:fontFamily="@font/maven_pro_medium"
                            android:textColor="#666666" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="0dp" />
                        <TextView
                            android:id="@+id/end_address"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:text="St. Kyivska h. 10"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:textSize="@dimen/sp14"
                            android:fontFamily="@font/maven_pro_medium"
                            android:textColor="#666666" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp14"
                    android:paddingBottom="@dimen/dp0"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp8">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/start_image"
                                android:layout_width="@dimen/dp30"
                                android:layout_height="@dimen/dp30"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/in_the_way"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp10"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_toLeftOf="@+id/end_image"
                                android:layout_toRightOf="@+id/start_image">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="@dimen/dp4"
                                        android:layout_height="@dimen/dp4"
                                        android:src="@drawable/circle_active"/>
                                    <LinearLayout
                                        android:id="@+id/address_filler"
                                        android:layout_width="match_parent"
                                        android:layout_marginLeft="@dimen/dp2"
                                        android:layout_marginRight="@dimen/dp6"
                                        android:layout_height="1dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="#dedede">
                                    </LinearLayout>

                                </LinearLayout>
                                <ImageView
                                    android:id="@+id/address_filler_dot"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="@dimen/dp4"
                                    android:layout_height="@dimen/dp4"
                                    android:src="@drawable/circle"/>
                            </RelativeLayout>
                            <ImageView
                                android:id="@+id/end_image"
                                android:layout_width="@dimen/dp30"
                                android:layout_height="@dimen/dp30"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/shipped"/>
                        </RelativeLayout>
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/dp8"
                                android:text="Type: "/>
                            <RadioGroup
                                android:id="@+id/input_radio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:buttonTint="@color/colorPrimary">
                                <RadioButton
                                    android:id="@+id/radio_bag"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bag"
                                    android:checked="true"
                                    style="@style/radionbutton"/>
                                <RadioButton
                                    android:id="@+id/radio_package"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Package"
                                    style="@style/radionbutton"/>
                            </RadioGroup>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/minus"
                                style="@style/ClickableImageView"
                                android:layout_width="@dimen/dp30"
                                android:layout_height="@dimen/dp30"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="@dimen/dp8"
                                android:padding="@dimen/dp8"
                                android:src="@drawable/minus" />
                            <TextView
                                android:id="@+id/counter_bag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#666666"/>
                            <ImageView
                                android:id="@+id/plus"
                                style="@style/ClickableImageView"
                                android:layout_width="@dimen/dp30"
                                android:layout_height="@dimen/dp30"
                                android:padding="@dimen/dp8"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="@dimen/dp8"
                                android:src="@drawable/plus" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/text_not_delivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Not yet delivered"
                    android:textSize="@dimen/sp18"
                    android:fontFamily="@font/maven_pro_bold"
                    android:textColor="#888888" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/text_delivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Delivered"
                    android:textSize="@dimen/sp18"
                    android:fontFamily="@font/maven_pro_bold"
                    android:textColor="#6665FF" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Mark as delivered"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/mark">
                        <ImageView
                            android:id="@+id/done"
                            style="@style/ClickableImageView"
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:padding="@dimen/dp8"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/dp8"
                            android:src="@drawable/done" />
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>








    </android.support.v7.widget.CardView>
</LinearLayout>