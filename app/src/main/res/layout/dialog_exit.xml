<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp10"
    app:cardElevation="@dimen/dp3"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp25">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rns_medium"
                android:text="Exit from application"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/very_dark_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:fontFamily="@font/rns_light"

                android:text="Do you really want to close the application"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/dark_text" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp18"
            android:gravity="end"
            android:orientation="horizontal">

            <com.korlab.foodex.UI.MaterialButton
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                app:mb_borderColor="@color/white"
                app:mb_borderWidth="@dimen/dp1"
                app:mb_buttonColor="@color/white"
                app:mb_buttonType="flat"
                app:mb_cornerRadius="@dimen/dp30"
                app:mb_rippleColor="@color/ripple_color"
                app:mb_text="CANCEL"
                app:mb_textColor="@color/dark_text"
                app:mb_textSize="@dimen/sp14"
                android:layout_marginRight="@dimen/dp20"/>

            <com.korlab.foodex.UI.MaterialButton
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                app:mb_borderColor="@color/white"
                app:mb_borderWidth="@dimen/dp1"
                app:mb_buttonColor="@color/white"
                app:mb_buttonType="flat"
                app:mb_cornerRadius="@dimen/dp30"
                app:mb_rippleColor="@color/ripple_color"
                app:mb_text="EXIT"
                app:mb_textColor="@color/colorPrimaryDark"
                app:mb_textSize="@dimen/sp14" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>